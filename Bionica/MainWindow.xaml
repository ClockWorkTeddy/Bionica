<Window x:Class="Bionica.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Bionica"
        mc:Ignorable="d"
        Title="MainWindow" Height="470" Width="500">
    <Grid>
        <Button Content="Start" HorizontalAlignment="Left" Margin="428,37,0,0" VerticalAlignment="Top" Click="Button_Click_1"/>
        <Button Content="Next" HorizontalAlignment="Left" Margin="428,62,0,0" VerticalAlignment="Top" Click="Button_Click"/>
        <Image HorizontalAlignment="Left" Height="{Binding Path=Size}" Margin="25,25,0,0" VerticalAlignment="Top" Width="{Binding Path=Size}" Source="{Binding Path=Image}"/>

    </Grid>
</Window>
